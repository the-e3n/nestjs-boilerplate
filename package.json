{
  "name": "nestjs-boilerplate",
  "version": "1.0.0",
  "description": "A production ready NestJS boilerplate with batteries included. No Kidding!",
  "author": "Vinayak Sarawagi <vinayaksarawagi25@gmail.com>",
  "private": false,
  "license": "MIT",
  "keywords": [
    "nestjs-boilerplate",
    "nestjs-objection",
    "nestjs-starter-template",
    "nestjs-template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/squareboat/nestjs-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/squareboat/nestjs-boilerplate/issues"
  },
  "homepage": "https://github.com/squareboat/nestjs-boilerplate",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "knex": "knex --knexfile knexfile.ts",
    "migrate:up": "npm run knex migrate:latest",
    "migrate:down": "npm run knex migrate:rollback",
    "migrate:make": "npm run knex migrate:make -- -x ts",
    "migrate:list": "npm run knex migrate:list",
    "seed:run": "npm run knex seed:run",
    "seed:make": "npm run knex seed:make -- -x ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.18",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.18",
    "@nestjs/platform-express": "^7.6.18",
    "@squareboat/nest-console": "^0.0.7",
    "@squareboat/nest-events": "0.0.5",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.6.0",
    "knex": "^0.21.19",
    "moment": "^2.29.1",
    "mysql2": "^2.2.5",
    "neo4j-driver": "^4.4.6",
    "objection": "^2.2.15",
    "query-string": "^7.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.18",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@libs/core/(.*)": "<rootDir>/libs/core/src/$1",
      "@libs/core": "<rootDir>/libs/core/src",
      "@libs/nest-neo4j/(.*)": "<rootDir>/libs/nest-neo4j/src/$1",
      "@libs/nest-neo4j": "<rootDir>/libs/nest-neo4j/src"
    }
  }
}
